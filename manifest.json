{
  "manifest_version": 3,
  "name": "YouTube Transcript Copier",
  "version": "1.5",
  "description": "Copy YouTube video title, channel, and transcript with a customizable message.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content_script.js"]
    }
  ]
}
