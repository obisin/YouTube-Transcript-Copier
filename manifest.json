{
  "manifest_version": 3,
  "name": "YouTube Transcript Copier",
  "version": "1.6",
  "description": "Copy YouTube transcripts (with your prompt) and optionally redirect to ChatGPT, Claude, or Gemini with autoâ€‘paste/send.",
  "permissions": [
    "storage",
    "clipboardWrite",
    "scripting",
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "YouTube Transcript Copier",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "optional_host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content_script.js"]
    }
  ]
}
